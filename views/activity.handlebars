<section>
  <h1>Your Activity</h1>
  {{#each posts}}
  <div class="card black darken-1">
    <div class="card-content border-line">
      <div class="line">
        <span class ="card-title"><a href="/post/{{id}}">{{song_title}}</a></span>
        <span class="artist">[{{song_artist}}]</span>
        <div class="rate">
          <p><a href="{{song_url}}" target="_blank">click here to checkout the song!</a></p>
          <p>Rating: ({{rating}})</p>
        </div>
      </div>
      <br>
      <div>
        <p>Review: {{review}} </p>
        by {{user.username}} on
        {{format_date created_at}}
      </div>
      <div class="rate">
        <a href="/post/{{id}}">{{comments.length}} comments</a>
        <div>{{upvotesCount}} <i class="material-icons">thumb_up</i></br>{{downvotesCount}}<i class="material-icons">thumb_down</i></div>
      </div>
    </div>
  </div>
  {{/each}}
</section>