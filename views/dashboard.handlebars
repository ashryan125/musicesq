<section>
  <h2>Create New Post</h2>

  <form class="new-post-form">
    <div>
      <label for="song-title">Song Title</label>
      <input type="text" id="post-title" name="post-title" />
    </div>
    <div>
      <label for="song-artist">Song Artist</label>
      {{!-- <input id="post-url" name="post-url" /> --}}
    </div>
    <div>
      <label for="review">Review (160 characters)</label>
      <input type="text" id="review" name="review" />
    </div>
      <h3>Rate your song!</h3>
       <form>
    
        <label>
          <input name="rating1" type="radio" value="1" />
          <span>1</span>
        </label>

 <label>
          <input name="rating2" type="radio" value="2" />
          <span>2</span>
        </label>

         <label>
          <input name="rating3" type="radio" value="3" />
          <span>3</span>
        </label>

         <label>
          <input name="rating4" type="radio" value="4" />
          <span>4</span>
        </label>

         <label>
          <input name="rating5" type="radio" value="5" />
          <span>5</span>
        </label>
    </form>
    <button type="submit" class="btn">Create</button>
  </form>
</section>

{{#if posts.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each posts as |post|}}
    <li>
      {{> post-info post}}
      <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}