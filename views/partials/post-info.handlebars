<div class="card black darken-1">
    <div class="card-content border-line">
        <div class="line">
            <span class="card-title"><a href="/post/{{id}}">{{song_title}} - {{song_artist}}</a></span>
            <div class="rate">
                <p>Rating: {{rating}}</p>
            </div>
        </div>
        <br>
        <div>
            <p>Review: {{review}} </p>
        </div>
        <div class="rate">
            <a href="/post/{{id}}">{{comments.length}} comments</a>
            <div>{{upvotesCount}} <i class="material-icons">thumb_up</i></br>{{downvotesCount}}<i
                    class="material-icons">thumb_down</i></div>
        </div>
            <span><a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a></span>
            <p><a href="{{song_url}}" target="_blank">Interested? Click here!</a></p>
        </a>
        <div>
            <span>
                by {{user.username}} on {{format_date created_at}}
            </span>

        </div>
    </div>
</div>