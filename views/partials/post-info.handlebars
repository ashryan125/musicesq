<div class="card black darken-1">
    <div class="card-content">
        <div class="line">
            <span class="card-title"><a href="/post/{{id}}">{{song_title}}</a></span>
            <div class="rate">
                <span>
                    ({{song_artist}})
                </span>
                <p>Rating: ({{rating}})</p>
            </div>
        </div>
        <p>Review: {{review}} </p>
        by {{user.username}} on
        {{format_date created_at}}
        {{upvotesCount}} upvote(s) | {{downvotesCount}} downvote(s) |
        <a href="/post/{{id}}">{{comments.length}} comment(s)</a>
    </div>
</div>