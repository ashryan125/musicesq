<section>
  <h3>Homepage</h3>
  {{#each posts}}
  <div class="card black darken-1">
    <div class="card-content border-line">
      <div class="line">
        <span class="card-title"><a href="/post/{{id}}">{{song_title}}</a></span>
        <div class="rate">
          <span>
            <h5>{{song_artist}}</h5>
          </span>
          <p>Rating: {{rating}}</p>
        </div>
      </div>
      <br>
      <div>
        <p>Review: {{review}} </p>
        by {{user.username}} on
        {{format_date created_at}}
      </div>
      <div class="meta">
        {{upvotesCount}} upvotes | {{downvotesCount}} downvotes |
        <a href="/post/{{id}}">{{comments.length}} comments</a>
      </div>
    </div>
  </div>
  {{/each}}
</section>
