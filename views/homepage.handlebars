<section>
  <h3>Homepage</h3>
  {{#each posts}}
  <div class="card black darken-1">
    <div class="card-content border-line">
      <div class="line">
        <span class="card-title"><a href="/post/{{id}}">{{song_title}}</a></span>
          <div class="rate">
            <h5 class="artist">[{{song_artist}}]</h5>
            <p>Rating: ({{rating}})</p>
          </div>
      </div>
      <br>
      <div>
        <p>Review: {{review}} </p>
        by {{user.username}} on
        {{format_date created_at}}
      </div>
      <br>
      <div class="rate">
        <a href="/post/{{id}}">{{comments.length}} comments</a>
        {{upvotesCount}} Upvotes | {{downvotesCount}} Downvotes
      </div>
    </div>
  </div>
  {{/each}}
</section>