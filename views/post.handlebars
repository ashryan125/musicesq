<section>
    <h2>Create New Post</h2>

    <form class="new-post-form">
        <div>
            <label for="post-song">Song Name</label>
            <input type="text" id="post-song" name="post-song" />
        </div>
        <div>
            <label for="post-artist">Artist</label>
            <input id="post-artist" name="post-artist" />
        </div>
        <div>
            <label for="post-review">Review</label>
            <input id="post-review" name="post-review" />
        </div>
        <div>
            <label for="post-rate">Rating</label>
            <input id="post-rate" name="post-rate" />
        </div>
        <button type="submit" class="btn">Create</button>
    </form>
</section>

{{#if posts.length}}
<section>
    <h2>Your Posts</h2>
    <ol>
        {{#each posts as |post|}}
        <li>
            {{> post-info post}}
            <a href="/dashboard/edit/{{post.id}}" class="edit-link">Edit post</a>
        </li>
        {{/each}}
    </ol>
</section>
{{/if}}