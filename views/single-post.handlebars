<article class="post">
  <div class="title">
    <a href="{{post.song_title}}" target="_blank">{{post.song_artist}}</a>
    <span>({{post.song_title}})</span>
    <p>Rating: ({{post.rating}})</p>
    <p>Review: ({{post.review}}) </p>
    by
    {{post.user.username}}
    on
    {{post.created_at}}
  </div>
  <div class="meta">
    {{post.upvotesCount}}
    upvote(s) |
    {{post.downvotesCount}}
    downvote(s) |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">upvote</button>
  </div>
</form>

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>