<section>
  <h3>Add Comments</h3>
  <div class="card black darken-1">
    <div class="card-content">
      <article class="post">
        <div>
          <div class="line">
            <div class="title">
              <a href="/post/{{post.id}}">{{post.song_title}} </a>
              <span>({{post.song_artist}})</span>
            </div>
            <p><a href="{{song_url}}" target="_blank">Click here to checkout the song!</a></p>
            <p>Rating: {{post.rating}}</p>
          </div>
          <p>Review: {{post.review}} </p>
          by
          {{post.user.username}}
          on
          {{format_date post.created_at}}
        </div>
        <div class="meta">
          {{post.upvotesCount}}
          upvote(s) |
          {{post.downvotesCount}}
          downvote(s) |
          <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
        </div>
      </article>

      {{#if loggedIn}}
      <form class="comment-form">
        <div>
          <textarea name="comment-body"></textarea>
        </div>
        <div>
          <button type="submit">add comment</button>
          <button type="button" class="upvote-btn">upvote</button>
          <button type="button" class="downvote-btn">downvote</button>
        </div>
      </form>
      {{/if}}
    </div>
  </div>
</section>

<section>
  <h4>Comments</h4>
  <div class="card black darken-1">
    <div class="card-content">
      <div class="comments">
        {{#each post.comments}}
        <section class="comment">
          <div class="card black darken-1">
            <div class="card-content">
              <div class="meta">
                {{user.username}}
              </div>
              <div class="text">
                {{comment_text}}
              </div>
            </div>
          </div>
        </section>
        {{/each}}
      </div>
    </div>
  </div>
</section>


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
<script src="/javascript/downvote.js"></script>
{{/if}}