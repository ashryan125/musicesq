<section>

  <div class="card black darken-1">
    <div class="card-content border-line">
      <section class="post">
        <div>
          <div class="line">
            <span class="card-title"><a href="/post/{{post.id}}">{{post.song_title}}
                    <span class="post-style">({{post.song_artist}})</span>
                </a></span>
            <p><a href="{{post.song_url}}" target="_blank" class="post-style">Wanna hear it?? Click here!</a></p>
            <div class="rate" style="margin-top: 10px;">
                <p>Rating: {{post.rating}}</p>
            </div>
            <div class="rate">
                <p>Review: {{post.review}} </p>
            </div>
        </div>


        <div class="rate">
            <a href="/post/{{id}}">{{post.comments.length}} comments</a>
        </div>
        <div style="margin-bottom: 20px;">
            {{post.upvotesCount}} <i class="material-icons">thumb_up</i>
            {{post.downvotesCount}}<i class="material-icons">thumb_down</i>
        </div>



        <div>
            <span>
                by {{post.user.username}} on {{format_date created_at}}
            </span>

        </div>

        <br>
        {{#if loggedIn}}
        <form class="comment-form">
          <div>
            <textarea name="comment-body"></textarea>
          </div>
          <div>
            <button type="submit">add comment</button>
            <button type="button" class="upvote-btn">upvote</button>
            <button type="button" class="downvote-btn">downvote</button>
          </div>
        </form>
        {{/if}}
    </div>
  </div>
</section>

<section>
  <h4>Comments</h4>
  <div class="comments">
    {{#each post.comments}}
    <section class="comment">
      <div class="card black darken-1">
        <div class="card-content border-line">
          <div class="meta">
            {{user.username}}
          </div>
          <div class="text">
            {{comment_text}}
          </div>
        </div>
      </div>
    </section>
    {{/each}}
  </div>
</section>


{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
<script src="/javascript/downvote.js"></script>
{{/if}}