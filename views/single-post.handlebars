<article class="post">
  <div class="title">
    <a href="/post/{{post.id}}">{{post.song_title}}</a>
    <span>({{post.song_artist}})</span>
    <p><a href="{{song_url}}" target="_blank">click here to checkout the song!</a></p>
    <p>Rating: {{post.rating}}</p>
    <p>Review: {{post.review}} </p>
    by
    {{post.user.username}}
    on
    {{format_date post.created_at}} 
  </div>
  <div class="meta">
    {{post.upvotesCount}}
    upvote(s) |
    {{post.downvotesCount}}
    downvote(s) |
    <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
  </div>
</article>

{{#if loggedIn}}
<form class="comment-form">
  <div>
    <textarea name="comment-body"></textarea>
  </div>

  <div>
    <button type="submit">add comment</button>
    <button type="button" class="upvote-btn">upvote</button>
    <button type="button" class="downvote-btn">downvote</button>
  </div>
</form>
{{/if}}

<div class="comments">
  {{#each post.comments}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
<script src="/javascript/downvote.js"></script>
{{/if}}